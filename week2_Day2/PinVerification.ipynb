   "source": [
    "correct_pin = \"1234\"\n",
    "attempts = 3\n",
    "\n",
    "while attempts > 0:\n",
    "    pin = input(\"Enter PIN: \")\n",
    "    if pin == correct_pin:\n",
    "        print(\"Access Granted ✅\")\n",
    "        break\n",
    "    else:\n",
    "        attempts -= 1\n",
    "        print(\"Wrong PIN. Attempts left:\", attempts)\n",
    "else:\n",
    "    print(\"Account Locked ❌\")\n"
   ]
  }
